{
  "name": "auth-server",
  "version": "0.0.1",
  "description": "Basic auth server built with ExpressJS",
  "scripts": {
    "dev": "bun --hot run src/index.js",
    "watch": "bun --watch run src/index.js",
    "start": "node src/index.js",
    "prepare": "husky install",
    "lint": "bun run eslint .",
    "lint:fix": "bun eslint . --fix",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "express",
    "authentication"
  ],
  "author": "Sandeep Bansal",
  "license": "ISC",
  "dependencies": {
    "argon2": "^0.40.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "knex": "^3.1.0",
    "pg": "^8.12.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.8.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.7",
    "mkcert": "^3.2.0",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}